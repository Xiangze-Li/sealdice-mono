{
  "name": "@sealdice/sealdice-ce-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": ">=10"
  },
  "homepage": "https://github.com/sealdice-ce/sealdice-ce",
  "keywords": [
    "sealdice-ce"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sealdice-ce/sealdice-ce.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "fix:versions": "syncpack fix-mismatches",

    "dev:ui": "pnpm -r --filter='*ui' run dev",
    "dev:manual": "pnpm -r --filter='*manual' run docs:dev",
    "dev:story-painter": "pnpm -r --filter='*story-painter' run dev",
    "dev:verify": "pnpm -r --filter='*verify' run dev",

    "check": "run-p check:ui check:manual check:story-painter check:verify",
    "check:versions": "syncpack list-mismatches",
    "check:ui": "pnpm -r --filter='*ui' run check",
    "check:manual": "pnpm -r --filter='*manual' run check",
    "check:story-painter": "pnpm -r --filter='*story-painter' run check",
    "check:verify": "pnpm -r --filter='*verify' run check",

    "preview:ui": "pnpm -r --filter='*ui' run preview",
    "preview:manual": "pnpm -r --filter='*manual' run preview",
    "preview:story-painter": "pnpm -r --filter='*story-painter' run preview",
    "preview:verify": "pnpm -r --filter='*verify' run preview",

    "build": "run-p build:*",
    "build:ui": "pnpm -r --filter='*ui' run build",
    "build:manual": "pnpm -r --filter='*manual' run docs:build",
    "build:story-painter": "pnpm -r --filter='*story-painter' run build-only",
    "build:verify": "pnpm -r --filter='*verify' run build-only"
  },
  "workspaces": [
    "ui",
    "manual",
    "story-painter",
    "verify"
  ],
  "dependencies": {
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "dayjs": "^1.11.18",
    "es-toolkit": "^1.40.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.2.13",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.7.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "eslint": "^9.37.0",
    "iconify-icon": "^3.0.1",
    "naive-ui": "^2.43.1",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "sass": "^1.93.2",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-icons": "^22.4.2",
    "unplugin-vue-components": "^29.1.0",
    "vite": "npm:rolldown-vite@latest",
    "vue-tsc": "^3.1.1"
  }
}